
<div class="login-box pretty rounded_4">
  <h2>Login</h2>

  <% form_for @user_session, :url => "/user_session" do |f| -%>
    <%= f.error_messages :message => nil, :header_message => nil %>
    <p>
      <%= f.label :login %><br/>
      <%= f.text_field :login %>
    </p>

    <p>
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </p>

    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>

    <p style="text-align:center"><%= f.submit "Entrar" %></p>
  <% end -%>

</div>